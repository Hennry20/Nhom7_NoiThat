@model List<GioHang>
@{
    ViewData["Title"] = "GioHang";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
<style>
    body {
        margin-top: 100px;
    }
</style>
<body>
    <div class="container">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Hình Ảnh</th>
                        <th>Số lượng</th>
                        <th>Đơn giá</th>
                        <th>Số tiền</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        decimal overallTotal = 0;
                    }
                    @foreach (var item in Model)
                    {
                        var totalPrice = item.SoLuong * item.SanPham.Price;
                        overallTotal += totalPrice;
                        <tr>
                            <td>@item.SanPham.Name</td>
                            <th><img src="@item.SanPham.HinhAnh" width="10%" height="10%"></th>
                            <td>@item.SoLuong</td>
                            <td>@item.SanPham.Price.ToString("N0")</td>
                            <td>@totalPrice.ToString("N0")</td>
                            <td><a class="align-content-center"><i class="bi bi-x-circle"></i></a></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" style="text-align:right"><strong>Tổng tiền:</strong></td>
                        <td><strong>@overallTotal.ToString("N0")</strong></td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <p>Không có sản phẩm nào trong giỏ hàng.</p>
        }
        <div class="row">
            <div class="col-md-10">
            </div>
            <div class="col-md-2">
                <button class="btn btn-primary text-white">Thanh Toán</button>
            </div>
        </div>
    </div>
</body>




