@model List<Asm1.Models.SanPham>
@{
    ViewData["Title"] = "TimKiem";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

<body style="margin-top:100px">
    <div class="container">
        <div class="row">
            <h2>Kết Quả Tìm Kiếm</h2>

            @if (Model.Count > 0)
            {

                @foreach (var obj in Model)
                {
                    <div class="col-md-3 mt-4 text-center" id="@obj.Id">
                        <div class="card border border-0 cardkhung">
                            <div class="mt-2" style="height:15%">
                                <h5 class="card-title">@obj.Name</h5>
                            </div>
                            <div style="width:60%; height:60; margin: 0 auto">
                                <img src="@obj.HinhAnh" class="w-100 h-100">
                            </div>
                            <div style="height:10%">
                                <p class="card-text mt-2 text-danger">@obj.Price.ToString("N0") VNĐ</p>
                            </div>
                            <div style="height:20%">
                                <button class="btn btn-primary mb-3 btnhideen" onclick="chuyentrang('@obj.Id')">Xem thêm</button>
                                <a href="" class="btn btn-danger mb-3 btnhideen1">Thêm vào giỏ</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Không tìm thấy sản phẩm nào phù hợp với từ khóa tìm kiếm.</p>
            }
            </div>
            </div>
    
</body>
