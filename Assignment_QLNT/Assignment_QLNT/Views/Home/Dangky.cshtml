@{
    ViewData["Title"] = "Đăng Ký";
}
<link rel="stylesheet" href="~/css/Dangky.css" asp-append-version="true" />
<style>
    .hide {
        display: none;
    }

    .show {
        display: block;
        color: red;
        font-weight: bold;
    }
</style>

<section>
    <div class="form-box">
        <div class="form-value">
            <form asp-action="Index" method="post">
                <h2>Đăng ký</h2>
                <div class="inputbox">
                    <ion-icon name="person-outline"></ion-icon>
                    <input type="text" id="username" required name="username">
                    <label for="">Tên tài khoản</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="mail-outline"></ion-icon>
                    <input type="text" id="email" required name="email">
                    <label for="">Email</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="earth-outline"></ion-icon>
                    <input type="text" id="address" required name="address">
                    <label for="">Địa chỉ</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="call-outline"></ion-icon>
                    <input type="text" id="phonenumber" required name="phonenumber">
                    <label for="">Số điện thoại</label>
                </div>
                <label for="" class="me-3">Giới tính: </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                    <label class="form-check-label" for="male"> Nam <ion-icon name="male-outline"></ion-icon></label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                    <label class="form-check-label" for="female"> Nữ <ion-icon name="female-outline"></ion-icon></label>
                </div>
                <div class="inputbox"></div>

                @* <label for="" class="me-3">Vai trò: </label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" id="customer" value="customer">
                    <label class="form-check-label" for="customer"> Khách hàng <ion-icon name="person-outline"></ion-icon></label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="role" id="admin" value="admin">
                    <label class="form-check-label" for="admin"> admin <ion-icon name="person-outline"></ion-icon></label>
                </div> *@
                @* <div class="inputbox"></div> *@

                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input type="password" id="password" required name="password">
                    <label for="">Mật khẩu</label>
                </div>
                <div class="inputbox">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input type="password" id="repassword" required name="repassword">
                    <label for="">Xác nhận mật khẩu</label>
                </div>

                <button class="btn-login">Đăng ký</button>
                <div class="register">
                    <p>Có tài khoản? <a asp-action="DangNhap" asp-controller="Home">Đăng nhập ngay</a></p>
                </div>
            </form>
            <p id="errorMessage" class="hide">@ViewBag.ErrorMessage</p>
        </div>
    </div>
</section>


<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>