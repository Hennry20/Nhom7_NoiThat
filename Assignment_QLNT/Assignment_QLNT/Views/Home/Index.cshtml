@{
    ViewData["Title"] = "Home Page";
}
 @model IEnumerable<Asm1.Models.SanPham>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />

<div class="mt-4">
    <div id="carouselExampleIndicators" class="carousel slide" style="height: 600px; margin-top: 100px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" style="height: 100%;">
            <div class="carousel-item active" data-bs-interval="100">
                <img src="~/slider_banner/slider1.png" class="d-block w-100" height="600px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="100">
                <img src="~/slider_banner/slider2.png" class="d-block w-100" height="600px" alt="...">
            </div>
            <div class="carousel-item" data-bs-interval="100">
                <img src="~/slider_banner/slider3.png" class="d-block w-100" height="600px" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div class="row mt-3">
    <div class="card col-md-6 mt-4 border border-0">
        <div style="position: relative;" class="greek1">
            <img src="\IMG\\sofa.jpg" alt="" width="100%" class="image-hover">
            <div style="position: absolute; left: 40%; text-align: center;">
                <p style="font-size: 50px; color: white;"></p>
            </div>
        </div>
    </div>
    <div class="card col-md-6 border border-0">
        <div class="row">
            <div style="position: relative;" class="greek">
                <img src="\IMG\ban.jpg" alt="" width="100%" class="image-hover">
                <div style="position: absolute; left: 10%; text-align: center;">
                    <p style="font-size: 40px; color: darkblue;"></p>
                </div>
            </div>

            <div style="position: relative;" class="greek">
                <img src="\IMG\banan3.jpg" alt="" width="100%" class="image-hover">
                <div style="position: absolute; left: 10%; text-align: center;">
                    <p style="font-size: 40px; color: darkblue;"></p>
                </div>
            </div>

            <div style="position: relative;" class="greek">
                <img src="\IMG\giuong.jpg" alt="" width="100%" class="image-hover">
                <div style="position: absolute; left: 10%; text-align: center;">
                    <p style="font-size: 40px; color: darkblue;"></p>
                </div>
            </div>

            <div style="position: relative;" class="greek">
                <img src="\IMG\ban8cho3.jpg" alt="" width="100%" class="image-hover">
                <div style="position: absolute; left: 10%; text-align: center;">
                    <p style="font-size: 40px; color: darkblue;"></p>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="container">
    <div class="row">
        <h3 class="font-weight-bold">SẢN PHẨM MỚI</h3>
        <hr />
        @foreach (var obj in Model.Take(8))
        {
            <div class="col-md-3 mt-4 text-center" id="@obj.Id">
                <div class="card border border-0 cardkhung w-100 h-100">
                    <div class="mt-2" styl  e="height:15%">
                        <h5 class="card-title">@obj.Name</h5>
                    </div>
                    <div style="width:90%; height:100%; margin: 0 auto">
                        <img src="@obj.HinhAnh" class="w-100 h-100 rounded-2">
                    </div>
                    <div style="height:20%;">
                        <p class="mt-2 text-danger">@obj.Price.ToString("N0") VNĐ</p>
                    </div>
                    <div>
                        <div class="mt-5">
                            <button class="btn btn-primary mb-3 btnhideen" onclick="chuyentrang('@obj.Id')">Xem thêm</button>
                            <a href="" class="btn btn-danger mb-3 btnhideen1">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-3">
        <h3 class="font-weight-bold">CÓ THỂ BẠN SẺ THÍCH</h3>
        <hr />
        @foreach (var obj in Model.Skip(8).Take(8))
        {
            <div class="col-md-3 mt-4 text-center" id="@obj.Id">
                <div class="card border border-0 cardkhung w-100 h-100">
                    <div class="mt-2" style="height:15%">
                        <h5 class="card-title">@obj.Name</h5>
                    </div>
                    <div style="width:90%; height:100%; margin: 0 auto">
                        <img src="@obj.HinhAnh" class="w-100 h-100 rounded-2">
                    </div>
                    <div style="height:20%;">
                        <p class="mt-2 text-danger">@obj.Price.ToString("N0") VNĐ</p>
                    </div>
                    <div>
                        <div class="mt-5">
                            <button class="btn btn-primary mb-3 btnhideen" onclick="chuyentrang('@obj.Id')">Xem thêm</button>
                            <a href="" class="btn btn-danger mb-3 btnhideen1">Thêm vào giỏ</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function chuyentrang(id) {
        window.location.href = '/Home/ChiTiet/?id=' + id;
    }
</script>